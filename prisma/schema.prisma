// Professor Gosse's Peculiar Breakdown & Scheduling Site
// Database schema for film production breakdown sheets and strip board scheduling

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ═══════════════════════════════════════════════════════════════
// ENUMS
// ═══════════════════════════════════════════════════════════════

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum ProjectMemberRole {
  VIEWER
  EDITOR
  ADMIN
}

enum IntExt {
  INT
  EXT
}

enum DayNight {
  DAY
  NIGHT
  DUSK
  DAWN
  DAY_FOR_NIGHT
}

enum BannerType {
  TRAVEL
  MOVE
  HOLIDAY
  PRERIG
  INFO
}

enum ElementCategory {
  WARDROBE
  PROPS
  SET_DRESSING
  ART_DEPT
  SPECIAL_PERSONNEL
  VEHICLES
  CAMERA
  MECHANICAL_FX
  VISUAL_FX
  SPECIAL_EQUIP
  ANIMALS
  SOUND_MUSIC
  OTHER
}

// ═══════════════════════════════════════════════════════════════
// AUTH MODELS (NextAuth compatible)
// ═══════════════════════════════════════════════════════════════

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  image         String?
  role          UserRole  @default(STUDENT)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  ownedProjects Project[]         @relation("ProjectOwner")
  memberships   ProjectMember[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ═══════════════════════════════════════════════════════════════
// PROJECT & MEMBERSHIP
// ═══════════════════════════════════════════════════════════════

model Project {
  id         String   @id @default(cuid())
  title      String
  director   String?
  producer   String?
  ad         String?  // 1st Assistant Director
  scriptDate DateTime?
  ownerId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  owner      User              @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members    ProjectMember[]
  characters Character[]
  breakdowns BreakdownSheet[]
  schedule   Schedule?
  elements   ProductionElement[]
}

model ProjectMember {
  id        String            @id @default(cuid())
  projectId String
  userId    String
  role      ProjectMemberRole @default(VIEWER)
  createdAt DateTime          @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

// ═══════════════════════════════════════════════════════════════
// CHARACTER (CAST)
// ═══════════════════════════════════════════════════════════════

model Character {
  id        String   @id @default(cuid())
  projectId String
  number    Int      // Cast number (1, 2, 3, etc.)
  name      String
  actor     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project    Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  breakdowns BreakdownCast[]

  @@unique([projectId, number])
}

// ═══════════════════════════════════════════════════════════════
// BREAKDOWN SHEET
// ═══════════════════════════════════════════════════════════════

model BreakdownSheet {
  id           String   @id @default(cuid())
  projectId    String
  sceneNumbers String   // e.g., "1", "2A", "3-4" for combined scenes
  intExt       IntExt?
  location     String?
  dayNight     DayNight?
  pageCount    String?  // In eighths, e.g., "3/8", "1 2/8"
  description  String?  @db.Text
  storyDay     Int?
  cameraSetups Int?     // Estimated number of camera setups/shots for coverage
  isFlashback  Boolean  @default(false)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Department fields
  stunts           String? @db.Text
  extras           String? @db.Text
  wardrobe         String? @db.Text
  props            String? @db.Text
  setDressing      String? @db.Text
  artDept          String? @db.Text
  specialPersonnel String? @db.Text
  vehicles         String? @db.Text
  camera           String? @db.Text
  mechanicalFx     String? @db.Text
  visualFx         String? @db.Text
  specialEquip     String? @db.Text
  animals          String? @db.Text
  soundMusic       String? @db.Text
  other            String? @db.Text
  dqs              String? @db.Text // Day Qualified Stunt performers / DQs / Notes

  // Relations
  project   Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cast      BreakdownCast[]
  elements  BreakdownElement[]
  stripSlot StripSlot?
}

model BreakdownCast {
  id          String @id @default(cuid())
  breakdownId String
  characterId String

  // Relations
  breakdown BreakdownSheet @relation(fields: [breakdownId], references: [id], onDelete: Cascade)
  character Character      @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([breakdownId, characterId])
}

// ═══════════════════════════════════════════════════════════════
// PRODUCTION ELEMENTS (Reusable Items Library)
// ═══════════════════════════════════════════════════════════════

model ProductionElement {
  id        String          @id @default(cuid())
  projectId String
  category  ElementCategory
  name      String
  notes     String?         @db.Text
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  // Relations
  project    Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  breakdowns BreakdownElement[]

  @@unique([projectId, category, name])
}

model BreakdownElement {
  id          String @id @default(cuid())
  breakdownId String
  elementId   String

  // Relations
  breakdown BreakdownSheet    @relation(fields: [breakdownId], references: [id], onDelete: Cascade)
  element   ProductionElement @relation(fields: [elementId], references: [id], onDelete: Cascade)

  @@unique([breakdownId, elementId])
}

// ═══════════════════════════════════════════════════════════════
// SCHEDULE & STRIP BOARD
// ═══════════════════════════════════════════════════════════════

model Schedule {
  id        String    @id @default(cuid())
  projectId String    @unique
  startDate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  project    Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  stripSlots StripSlot[]
  dayBreaks  DayBreak[]
  banners    BannerStrip[]
}

model StripSlot {
  id          String @id @default(cuid())
  scheduleId  String
  breakdownId String @unique // Each breakdown can only appear once in schedule
  position    Int

  // Relations
  schedule  Schedule       @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  breakdown BreakdownSheet @relation(fields: [breakdownId], references: [id], onDelete: Cascade)

  @@index([scheduleId, position])
}

model DayBreak {
  id            String    @id @default(cuid())
  scheduleId    String
  afterPosition Int       // Insert after this strip position
  dayNumber     Int
  shootDate     DateTime?
  notes         String?   @db.Text

  // Relations
  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, afterPosition])
}

model BannerStrip {
  id            String     @id @default(cuid())
  scheduleId    String
  afterPosition Int        // Insert after this strip position
  label         String
  bannerType    BannerType

  // Relations
  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@index([scheduleId, afterPosition])
}
